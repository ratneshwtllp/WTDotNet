@using ERP.Domain.Entities;
@using NonFactors.Mvc.Grid;


@model IEnumerable<ViewUserDetails>

@(Html
        .Grid(Model)
        .Build(columns =>
        {
            //columns.Add(model => Html.ActionLink("Edit", "EditUnit", new { id = model.Uid }));
            //columns.Add(model => Html.ActionLink("Edit", "EditUnit", new { id = model.Uid }));
            columns.Add(model => $"<a href='../User/EditUser/{model.UserId}'> <img src=\"../../images/edit.png\"></a>").Encoded(false);
            //columns.Add(model => $"<a href='/Unit/Unit/EditUnit/{model.Uid}'> <img src='@Url.Content('~/images/edit.png')' /> </a> ").Encoded(false);
            columns.Add(model => $"<a href='#' > <img src=\"../../images/delete.png\"   onclick=showJqueryDialog(\"{model.UserId}\"); > </a>").Encoded(false);
            //columns.Add(model => $"<button data-id=\"{model.Uid}\" onclick=showJqueryDialog(\"{model.Uid}\");> Delete</button>").Encoded(false);
            columns.Add(model => model.UserId).Css("hidden");
            columns.Add(model => model.DepartmentName).Titled("Department");
            columns.Add(model => model.UserTypeName ).Titled("User Type");
            //columns.Add(model => model.DepartmentHead).Titled("").RenderedAs(model => model.DepartmentHead == 1 ? "H" : "");
            columns.Add(model => model.UserName).Titled("User Name");
            columns.Add(model => model.LoginName).Titled("Login Name").Css("td-nowrap");
            columns.Add(model => model.Password).Titled("Password");
            //columns.Add(model => model.ConfirmPassword).Titled("Confirm Password");
            columns.Add(model => model.Address).Titled("Address");
            columns.Add(model => model.Email).Titled("Email");
            columns.Add(model => model.PhoneNo).Titled("Phone No");
            columns.Add(model => model.MobileNo).Titled("Mobile No");
            columns.Add(model => model.IsActive).Titled("Is Active").RenderedAs(model => model.IsActive == 1 ? "Yes" : "No").Css("td-nowrap");

        })
         .Sortable()
        //.Pageable(pager =>
        //{
        //    pager.PagesToDisplay = 10;
        //    pager.CurrentPage = 1;
        //    pager.RowsPerPage = 10;
        //})
        .Empty("No data found")
         .Css("table-hover")
)


<!-- The loading-area will be where we display a message during the AJAX call.
    This way, the user knows something is happening in the background.-->
<div id="loading-area" class="load" style="display:none;">
    <div class='alert alert-info'><strong>Sending...</strong></div>
</div>

<!-- The message-area will be where we display a message after the AJAX call
    about whether or not the contact form was successfully sent-->
<div id="message-area"></div>

<!--jQuery Modal Div-->
<div id="dialog-confirm" title="Delete Confirmation" style="display:none;">
    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This items will be permanently deleted and cannot be recovered. Are you sure?</p>
</div>


<div id="dataConfirmModal" class="modal" role="dialog" aria-labelledby="dataConfirmLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="dataConfirmLabel">Please Confirm</h3>
    </div><div class="modal-body"></div><div class="modal-footer"><button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button><a class="btn btn-primary" id="dataConfirmOK">OK</a></div>
</div>

<!-- These methods are invoked at different stages of the AJAX call-->
<script type="text/javascript">
    function showJqueryDialog(id) {
        $("#dialog-confirm").dialog({
            resizable: false,
            height: "auto",
            width: 400,
            modal: true,
            buttons: {
                "Yes": function () {

                    $.ajax({
                        cache: false,
                        url: '@Url.Action("DeleteUser")',
                        type: "GET",
                        data: { id: id },
                        dataType: 'JSON',
                        success: function (data) {
                        },
                    });

                    $(this).dialog("close");
                    //ShowSuccess("Delete Sucessfully.");
                    window.location.href = "../../User/User/UserList";
                },
                Cancel: function () {
                    $(this).dialog("close");
                }
            }
        });
    }

    function showJavascriptDelete() {
        var deleteUser = window.confirm('Are you sure you want to delete?');
        if (deleteUser) {
            //Logic to delete the item
            alert('deleted');
        }
        else {
            return false;
        }
    }

    function ShowSuccess(data) {
        alert(data);
    }

    function HideForm() {
        //When the form is submitted, we hide the form
        $("#form-area").hide();
    }
</script>