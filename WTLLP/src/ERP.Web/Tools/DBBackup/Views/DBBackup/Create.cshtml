@model ERP.Domain.Entities.DBBackupEntry
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "DB Backup";
}

<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="" />
<meta name="keywords" content="" />

<div id="message-area"></div>

@section Scripts {
    <script type="text/javascript">
        prevententertosubmit();
    </script>
}

<script type="text/javascript">
    function ShowSuccess(data) {
        alert(data);
    }

    function ShowFailure(data) {
        alert(data);
    }
</script>

<form asp-controller="DBBackup" asp-action="Create" data-ajax="true" data-ajax-success="ShowSuccess" data-ajax-failure="ShowFailure" data-ajax-method="POST">
    @Html.ValidationSummary(true)
    <div class="clear"></div>
    <div class="container">
        <div class="row clearleft-custom flow-offset-1">
            <div class="col-xs-12">
                <div class="thumbnail thumbnail-mod-1">
                    <div class="form">
                        <div>
                            <h3>Database Backup</h3>
                        </div>
                        @Html.HiddenFor(a=> a.name)
                        <input id="Submit1" type="submit" value="Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
