@model ERP.Domain.Entities.GSMDetails
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit GSM";
}


<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="description" content="" />
<meta name="keywords" content="" />

@section Scripts {
<script type="text/javascript">

    $(document).on('keydown', '#GSMName', function (e) { -1 !== $.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) || (/65|67|86|88/.test(e.keyCode) && (e.ctrlKey === true || e.metaKey === true)) && (!0 === e.ctrlKey || !0 === e.metaKey) || 35 <= e.keyCode && 40 >= e.keyCode || (e.shiftKey || 48 > e.keyCode || 57 < e.keyCode) && (96 > e.keyCode || 105 < e.keyCode) && e.preventDefault() });

    function ShowSuccess(data) {
        window.location.href = "../../GSM/GSMList";
        alert(data);
    }

    function HideForm() {
        //When the form is submitted, we hide the form
        $("#form-area").hide();
    }
    prevententertosubmit();
    function ShowFailure(data) {
        alert("Already Exist");
        //In the case that the AJAX call fails to communicate with the server
        //(e.g. the user's internet connection cuts out), we should display a message to that effect
        //$('#message-area').html("<div class='alert alert-danger'><strong>Error!</strong>The server could not be contacted and your message has not been sent. Please check your internet connection and try again later.</div>");
    }
</script>
}

<form asp-controller="GSM" asp-action="EditGSM" data-ajax="true" data-ajax-success="ShowSuccess" data-ajax-failure="ShowFailure" data-ajax-method="POST">
    @Html.ValidationSummary(true)
    <div class="clear"></div>
    <div class="container containerheight">
        <p>
            @Html.ActionLink("GSM List", "GSMList", "GSM", "", new { @class = "btn btn-info" })
        </p>
        <div class="row clearleft-custom flow-offset-1">
            <div class="col-xs-12 col-sm-6 col-lg-4">
                <div class="thumbnail thumbnail-mod-1">
                    <div class="form">
                        <div>
                            <h2>Edit GSM</h2>
                        </div>
                        @Html.HiddenFor(a => a.GSMId)

                        <p class="contact">
                            <label>GSM</label>
                        </p>
                        @Html.TextBoxFor(a => a.GSMName, new { @required = "true", autocomplete = "off", @class = "rightalign" })

                        <p class="contact">
                            <label>Remark</label>
                        </p>
                        @Html.TextAreaFor(a => a.GSMDesc, new { autocomplete = "off", rows = "4", maxlength = "100" })

                        <p class="contact">
                            <label>&nbsp;</label>
                        </p>
                        <input id="Submit1" type="submit" value="Edit GSM" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

