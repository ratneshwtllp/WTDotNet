@model ERP.Domain.Entities.ThicknessDetails
@using NonFactors.Mvc.Grid;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "List Thickness";
}
<p>
    @Html.ActionLink("Create New Thickness", "CreateThickness", "Thickness", "", new { @class = "btn btn-info" }) &nbsp;&nbsp;&nbsp; Search Thickness  &nbsp;&nbsp;<input class="grid-search" />
</p>
@Html.AjaxGrid(Url.Action("ThicknessList_Partial"))

@section Scripts {
    <script type="text/javascript">

        $(document).on('keyup', '.grid-search', function () {
            //alert("query");
            $('.mvc-grid').mvcgrid({
                query: 'search=' + this.value,
                reload: true
            });

        });
    </script>
}