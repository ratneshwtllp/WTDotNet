@using ERP.Domain.Entities;
@using NonFactors.Mvc.Grid;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "List RM Sub Category";
}

 <p>
    @Html.ActionLink("Create New RM SubCategory", "CreateRMSubCategory", "RMSubCat", "", new { @class = "btn btn-info" }) &nbsp;&nbsp;&nbsp; Search   &nbsp;&nbsp;<input class="grid-search" />
</p>
@Html.AjaxGrid(Url.Action("RMSubCategoryList_Partial"))
 
@section Scripts {
    <script type="text/javascript">

        $(document).on('keyup', '.grid-search', function () {
            //alert("query");
            $('.mvc-grid').mvcgrid({
                query: 'search=' + this.value,
                reload: true
            });
        });
    </script>
}