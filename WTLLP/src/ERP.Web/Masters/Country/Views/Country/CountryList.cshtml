@model ERP.Domain.Entities.CountryDetails
@using NonFactors.Mvc.Grid;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Country List";
}
<p>
    @Html.ActionLink("Create New Country", "CreateCountry", "Country", "", new { @class = "btn btn-info" })
</p>
@Html.AjaxGrid(Url.Action("CountryList_Partial"))

@section Scripts {
    <script type="text/javascript">

        $(document).on('keyup', '.grid-search', function () {
            //alert("query");
            $('.mvc-grid').mvcgrid({
                query: 'search=' + this.value,
                reload: true
            });

        });
    </script>
}

