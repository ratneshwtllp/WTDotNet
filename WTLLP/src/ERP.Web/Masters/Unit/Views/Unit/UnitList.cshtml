@model ERP.Domain.Entities.UnitDetails
@using NonFactors.Mvc.Grid;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Unit List";
}
<p>
    @Html.ActionLink("Create New Unit", "CreateUnit", "Unit", "", new { @class = "btn btn-info" }) &nbsp;&nbsp;&nbsp; Search Unit  &nbsp;&nbsp;<input class="grid-search" />
</p>
@Html.AjaxGrid(Url.Action("UnitList_Partial"))

@section Scripts {
    <script type="text/javascript">

        $(document).on('keyup', '.grid-search', function () {
            //alert("query");
            $('.mvc-grid').mvcgrid({
                query: 'search=' + this.value,
                reload: true
            }); 
        });
    </script>
}